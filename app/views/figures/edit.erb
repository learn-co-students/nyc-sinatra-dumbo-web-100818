

<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="figure_name">Figure Name</label>
  <input type="text" name="name" id="figure_name"
   value="<%=@figure.name%>">
<br>
  <h3>Titles</h3>
  <%@titles.each do |title|%>

  <br><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>> <%=title.name%> </input>
  <%end%>
  <h3>Create New Title </h3>
  <input type="text" name="title[name]" id="new_title">
<br>
<h3>Landmarks</h3>
  <%@landmarks.each do |landmark|%>
<br>
  <input type="checkbox" name="figure[landmark_ids][]"
value="<%=landmark.id%>" id="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%> > <%=landmark.name%> </input>
  <%end%>
  <h3>Create New Landmark</h3>
<label for="new_landmark" > Name: </label>
<input type="text" name="landmark[name]" id="new_landmark">
<label for="Landmark Year" > Year: </label>
<input type="text" name="landmark[year_completed]" id="Landmark Year">
<br>
<br>



  <input type="submit" value="Edit Figure">
</form>


