

<form action="/figures" method="post">
  <label for="figure_name">Figure Name</label>
  <input type="text" name="name" id="figure_name">
<br>
<h3>Titles</h3>
  <%@titles.each do |title|%>

  <br><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" > <%=title.name%> </input>
  <%end%>
  <h3>Create New Title </h3>
  <input type="text" name="title[name]" id="new_title">
<br>
<h3>Landmarks</h3>
  <%@landmarks.each do |landmark|%>
<br>
  <input type="checkbox" name="figure[landmark_ids][]"
value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" > <%=landmark.name%> </input>
  <%end%>
  <h3>Create New Landmark</h3>
<label for="Landmark Name" > Name: </label>
<input type="text" name="landmark[name]" id="new_landmark">
<label for="Landmark Year" > Year: </label>
<input type="text" name="landmark[year_completed]" id="Landmark Year">
<br>
<br>



  <input type="submit" value="Create New Figure">
</form>


